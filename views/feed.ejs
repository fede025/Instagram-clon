<%- include('partials/header') -%>
  <div class="container" style="margin-top: 10vh;">
    <div class="row justify-content-center">
      <div class="w-75 mx-auto my-2vh">
        <div class="row row-cols-md-2" style="--bs-gutter-x: 5rem; --bs-gutter-y: 5rem;">
          <% for(var i=0; i<recipes.length; i++) {%>
            <div class="col mb-5">           
              <a href="/recipe/<%= recipes[i]._id%>" class="d-block">   
                <h2 class="h4"><%= recipes[i].name%></h2>         
                <img class="img-fluid w-100" src="<%= recipes[i].image%>">
              </a>
            </div>
          <% } %>
        </div>
      </div>
    </div>
  </div>  
<%- include('partials/footer') -%>